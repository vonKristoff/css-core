// Landing header :: Above-The-Fold

section(role="heading")

// Desired core stylying

section#root
  .base--normal
    .layout--centered
      .content--columns.has-background-img
        header.block--head
          h1 body
        .block--body
          p body
          p Blocks are for Web Components & Titles
        .block--foot
          ul
            li one
            li two
            li three

// Using Mixin set

+section({id:"#test", content: "columns", background: true})  
  - let h = {head: "<my-header>", body: "<body-component>", foot: "<footer-list>"}
  +block("head")
    | #{h.head}
  +block
    | #{h.body}
  +block("footer")
    | #{h.foot}
